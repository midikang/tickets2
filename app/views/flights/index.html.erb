<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<ul id="flights">
<%= render @flights %>
</ul>

<br>

<%= form_for(@flight, remote: true) do |f| %>
  <%= f.label :departure %>
  <%= f.datetime_select :departure %><br>
  <%= f.label :arrival %>
  <%= f.datetime_select :arrival %><br>
  <%= f.label :destination %>
  <%= f.text_field :destination %><br>
  <%= f.label :baggage_allowance %>
  <%= f.text_field :baggage_allowance %><br>
  <%= f.label :capacity %>
  <%= f.number_field :capacity %><br>
  <%= f.submit %>
<% end %>

<br>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Destination</th>
      <th>Baggage allowance</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.departure %></td>
        <td><%= flight.arrival %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.baggage_allowance %></td>
        <td><%= flight.capacity %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>
