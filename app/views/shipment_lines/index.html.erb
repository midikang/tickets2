<p id="notice"><%= notice %></p>

<h1>Listing Shipment Lines</h1>

<table>
  <thead>
    <tr>
      <th>Shipment</th>
      <th>Line no</th>
      <th>Item</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipment_lines.each do |shipment_line| %>
      <tr>
        <td><%= shipment_line.shipment_id %></td>
        <td><%= shipment_line.line_no %></td>
        <td><%= shipment_line.item_id %></td>
        <td><%= shipment_line.quantity %></td>
        <td><%= link_to 'Show', shipment_line %></td>
        <td><%= link_to 'Edit', edit_shipment_line_path(shipment_line) %></td>
        <td><%= link_to 'Destroy', shipment_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

