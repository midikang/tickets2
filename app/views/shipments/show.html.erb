<p id="notice"><%= notice %></p>
<p>
  <strong>Customer name:</strong>
  <%= @shipment.customer_name %>
</p>
<p>Lines</p>
<table>
  <thead>
    <tr>
      <th>line_no</th>
      <th>|item_id</th>
      <th>|quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= @shipment.shipmentLines.each do |shipmentLine| %>
      <tr>
        <td><%= shipmentLine.line_no %></td>
        <td><%= shipmentLine.item_id %></td>
        <td><%= shipmentLine.quantity %></td>
        <td><%= link_to 'Show', shipmentLine %></td>
        <td><%= link_to 'Edit', edit_shipment_line_path(shipmentLine) %></td>
        <td><%= link_to 'Destroy', shipmentLine, method: :delete, data:{ confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
  

<%= link_to 'Edit', edit_shipment_path(@shipment) %> |
<%= link_to 'Back', shipments_path %>
